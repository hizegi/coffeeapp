<html>
<head>
	<title>Donut Finder</title>
	<link rel="stylesheet" type="text/css" href="../css/main.css">
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
	<script type="text/javascript" src="../js/text-slider.js"></script>
	<link href='https://fonts.googleapis.com/css?family=Karla:400,700,400italic' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>

</head>
<body>

	<!-- Navigation Bar Stuff -->
	<nav>
		<ul id="nav-links">

		<!-- SHOWS only if user is LOGGED OUT -->
		<!-- SIGN iN Form -->
		<% if(!login) { %> 

			<li>
				
				<form class="signup" action="/users" method="POST">
					<span>Sign up</span>
					<input type="text" name="username" placeholder="Username">
					<input type="text" name="email" placeholder="user@email.com">
					<input type="text" name="password" placeholder="password">
					<input type="submit" value="SIGN UP">
				</form>
			</li>
			<!-- SHOWS only if user is LOGGED OUT -->
			<!-- 	LOG IN FORM -->
			<li>
				
				<form class="signup" action="/users/login" method="POST">
					<span>Log In</span>
					<input type="text" name="email" placeholder="user@email.com">
					<input type="password" name="password" placeholder="password">
					<input type="submit" value="LOG IN">
				</form>
			</li>

		<% }  else { %>

			<a href="javascript:history.back()">PROFILE </a> |
			<a href="/users/logout"> LOGOUT</a>

		<% } %>
		</ul>
	</nav>

	<h1 align="center">Donut Press</h1>
	<br><br>


	<!-- This displays reviews -->
	<h3>RECENT REVIEWS: </h3>

	<div class="slide">
		<% for (var i = 0; i < review.length; i++) { %>
		 <div class="slider-item">	<%= review[i].comments%> </div>
		<% } %>
	</div>
		

			<!-- LIST OF USERS, HIDDEN in CSS, HOVER to SHOW-->
				<div id="dataset-select-container">
					<select id="dataset-select">
						<option value=""/>USERS</option>
						<% for (var i=0; i < user.length; i ++) { %>
							<option value="/users/<%= user[i].id %>"><%= user[i].username %></option>
						<% } %>
					</select>					
				</div>



</body>
</html>